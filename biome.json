{
  "extends": [
    "@dvsa/biome-config/biome"
  ],
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 120,
    "attributePosition": "auto",
    "ignore": [
      "**/*.html",
      "**/*.json"
    ]
  },
  "files": {
    "ignore": [
      "**/.husky/",
      "**/.idea/",
      "**/dist/",
      "**/artifacts/",
      "**/node_modules/",
      "**/ngrx-devtool-proxy/",
      "**/plugins/",
      "**/buildscripts/",
      "**/fastlane/",
      "**/resources/",
      "**/remotedev-server/",
      "**/buildscripts/",
      "**/.angular/",
      "**/www/",
      "**/ios/",
      "**/src/assets/",
      "**/src/polyfills.ts"
    ]
  },
  "overrides": [
    {
      "include": [
        "**/*.ts"
      ],
      "linter": {
        "enabled": true,
        "rules": {
          "recommended": true,
          "style": {
            "useNodejsImportProtocol": "off",
            "useDefaultParameterLast": "off",
            "noParameterAssign": "off"
          },
          "complexity": {
            "useLiteralKeys": "off",
            "noBannedTypes": "off",
            "noForEach": "off",
            "noThisInStatic": "off",
            "noUselessConstructor": "off",
            "useOptionalChain": "off",
            "noUselessCatch": "off"
          },
          "correctness": {
            "noUnsafeOptionalChaining": "off",
            "noSwitchDeclarations": "off"
          },
          "suspicious": {
            "noAssignInExpressions": "off",
            "noExplicitAny": "off",
            "noImplicitAnyLet": "off",
            "noConfusingVoidType": "off"
          },
          "performance": {
            "noDelete": "off",
            "noAccumulatingSpread": "off"
          }
        }
      }
    }
  ]
}
