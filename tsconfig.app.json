{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [ "jasmine", "node" ]
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "ngrx-devtools-proxy/*.ts",
    "remotedev-server/",
    "mock/",
    "src/**/*.spec.ts",
    "src/test.ts",
    "src/**/*.mock.ts",
    "src/**/__mocks__/*.ts",
    "src/**/__tests__/*.ts",
    "src/assets/mock/ionic-mocks/**/*.ts",
    "src/assets/mock/angular-mocks/**/*.ts"
  ]
}
