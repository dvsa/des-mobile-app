# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts]
ij_typescript_use_double_quotes = false
max_line_length = 120

[*.html]
ij_html_quote_style = double

[*.md]
max_line_length = off
trim_trailing_whitespace = false
